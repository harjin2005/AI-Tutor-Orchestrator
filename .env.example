# =============================================================================
# AI TUTOR ORCHESTRATOR - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control

# =============================================================================
# AI API KEYS (Required)
# =============================================================================
# Groq API Key - Free tier available at https://console.groq.com/keys
GROQ_API_KEY=gsk_your_groq_api_key_here

# OpenRouter API Key - Get from https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your_openrouter_api_key_here

# OpenRouter Model Configuration
# Available models: https://openrouter.ai/models
# Free options: microsoft/phi-3-mini-128k-instruct, meta-llama/llama-3.2-1b-instruct
# Recommended: agentica/deepcoder-14b-base, anthropic/claude-3.5-sonnet
OPENROUTER_MODEL=agentica/deepcoder-14b-base

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite (Default for development and demo) - No setup required
DATABASE_URL=sqlite:///./data/hackathon.db

# PostgreSQL (Production) - Example for Supabase
# DATABASE_URL=postgresql://username:password@host:port/database_name
# Example: postgresql://postgres:password@db.project.supabase.co:5432/postgres

# =============================================================================
# FASTAPI APPLICATION SETTINGS
# =============================================================================
# Server Configuration
APP_HOST=0.0.0.0
APP_PORT=8000
APP_WORKERS=1

# Application Metadata
APP_NAME=AI Tutor Orchestrator
APP_VERSION=1.0.0
APP_DESCRIPTION=Hackathon Project - Hybrid Agent System with LangGraph

# Environment (development, staging, production)
ENVIRONMENT=development
DEBUG=True

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Secret key for JWT tokens and session management
SECRET_KEY=your-super-secret-key-min-32-characters-long

# CORS Configuration
ALLOWED_ORIGINS=*
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log File Path
LOG_FILE_PATH=./logs/app.log

# Enable/Disable Request Logging
LOG_REQUESTS=True

# =============================================================================
# REDIS CONFIGURATION (Optional - for caching and sessions)
# =============================================================================
# Redis URL for caching and session management
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=10

# Cache TTL in seconds
CACHE_TTL=3600

# =============================================================================
# AI MODEL CONFIGURATIONS
# =============================================================================
# Groq Model Settings
GROQ_MODEL=mixtral-8x7b-32768
GROQ_MAX_TOKENS=1000
GROQ_TEMPERATURE=0.7

# OpenRouter Settings
OPENROUTER_MAX_TOKENS=1000
OPENROUTER_TEMPERATURE=0.7

# Request Timeouts (seconds)
AI_REQUEST_TIMEOUT=30
AI_MAX_RETRIES=3

# =============================================================================
# DOCKER & DEPLOYMENT SETTINGS
# =============================================================================
# Container Settings
PYTHONPATH=/app
PYTHONUNBUFFERED=1

# Health Check Settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Auto-reload on code changes (development only)
RELOAD=True

# Enable API documentation
ENABLE_DOCS=True

# Debug SQL queries
SQL_DEBUG=False

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# For production deployment, override these:
# ENVIRONMENT=production
# DEBUG=False
# LOG_LEVEL=WARNING
# RELOAD=False
# ALLOWED_ORIGINS=https://yourdomain.com
# SECRET_KEY=generate-a-strong-random-key-here

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================
# Webhook URL for notifications
WEBHOOK_URL=

# Email Configuration (for notifications)
SMTP_SERVER=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=

# Analytics & Monitoring
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=

# =============================================================================
# HACKATHON SPECIFIC SETTINGS
# =============================================================================
# Demo Mode (enables additional logging and features)
DEMO_MODE=True

# Maximum conversation history to store
MAX_HISTORY_ITEMS=1000

# Enable experimental features
EXPERIMENTAL_FEATURES=True
