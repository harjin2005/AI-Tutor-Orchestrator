# Production environment configuration
ENVIRONMENT=production
DEBUG=False
LOG_LEVEL=WARNING
RELOAD=False

# Security Settings
SECRET_KEY=generate-a-strong-random-32-char-key-here
ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# Database (Production PostgreSQL)
DATABASE_URL=postgresql://username:password@production-host:5432/database_name

# API Keys (use production keys)
GROQ_API_KEY=gsk_production_groq_key_here
OPENROUTER_API_KEY=sk-or-v1-production_openrouter_key_here
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# Redis Production
REDIS_URL=redis://production-redis-host:6379/0
REDIS_PASSWORD=production-redis-password

# Monitoring
SENTRY_DSN=https://your-sentry-dsn-here
LOG_FILE_PATH=/app/logs/production.log

# Performance
APP_WORKERS=4
RATE_LIMIT_PER_MINUTE=30
RATE_LIMIT_PER_HOUR=500
